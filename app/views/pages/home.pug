extends ../templates/layout

block main 
  main
    .about-sec
        h1 Homepage
    h1 Posts
        if posts && posts.length
            .cards
                each post in posts
                    .card
                        img(src=post.image, alt=post.title)
                        .content
                            h2= post.title
                            p= post.description
        else
            p No posts available
